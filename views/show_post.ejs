<!doctype html>
<html lang="en">
 <head>
   <!-- Required meta tags -->
   <meta charset="utf-8">
   <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
 
   <!-- Bootstrap CSS -->
   <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
   <title>My blog</title>
</head>
<body>

  <style>
    #a1 {
      display: flex;
      justify-content: space-around;
      width: 100%;
    }
  </style>

<div class="container">
    <%- include("partials/navbar.ejs") %>
    <div class="jumbotron">

    <form method="postP" action="/posts/<%- postP['id'] %>/show">
<!-- <div id="a1"> -->
      <label for="name" ><%- postP['title'] %>, </label> 

      <label for="text"> <b>By <span style="color:red;font-weight:bold"><%- postP['author'] %></span> </b></label>
 <!-- </div> -->
    <div class="form-group">
        <label for="message"></label>
        <textarea readonly name="body" class="form-control" id="body" rows="3" required><%- postP['body'] %></textarea>
    </div>
  </form>

    <h3>Comments</h3> 
    
    <br/>
    <label for="text" >какойто текст</label> 
    <label for="text"><b> By <span style="color:red"><%- postP['author'] %></span></b> </label>
    
    <form method="post" action="/posts/:id/show">
    <h3>Leave comments</h3>  

    <div class="form-group">
      <label for="postId">postId</label>
      <input type="text" readonly name="postId" class="form-control" id="postId" value="<%- postP['id'] %>" required>
    </div> 

    <div class="form-group">
      <label for="name">Author</label>
      <input type="text"  name="author" class="form-control" id="author" placeholder="John" required>
    </div>
    <div class="form-group">
        <label for="message">Body</label>
        <textarea name="comment" class="form-control" id="comment" rows="5" required> </textarea>
    </div>

    <br/>
    <button type="submit" class="btn btn-primary">Send</button>
  </form>
</div> 
</div>
<!-- JavaScript -->
<script src="/jquery/jquery.min.js"></script>
<script src="/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>