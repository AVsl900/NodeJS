<!doctype html>
<html lang="en">
 <head>
   <!-- Required meta tags -->
   <meta charset="utf-8">
   <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
 
   <!-- Bootstrap CSS -->
   <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
   <title>My blog</title>
</head>
<body>

  <style>
    #a1 {
      display: flex;
      justify-content: space-around;
      width: 100%;
    }
  </style>

<div class="container">
    <%- include("partials/navbar.ejs") %>
    <div class="jumbotron">

    <form method="post" action="/posts/<%- post['id'] %>/show">
<!-- <div id="a1"> -->
      <label for="name" >Тема: <%- post['title'] %></label> 
      <br/>
      <label for="text">Author: <%- post['author'] %> </label>
 <!-- </div> -->
    <div class="form-group">
        <label for="message"></label>
        <textarea readonly name="body" class="form-control" id="body" rows="3" required><%- post['body'] %></textarea>
    </div>
  </form>

    <h3>Comments</h3>  
    <div class="form-group">
      <label for="name">Author</label>
      <input type="text"  name="author" class="form-control" id="author" placeholder="John" required>
    </div>
    <div class="form-group">
        <label for="message">Body</label>
        <textarea name="body" class="form-control" id="body" rows="5" required> </textarea>
    </div>


  
</div> 
</div>
<!-- JavaScript -->
<script src="/jquery/jquery.min.js"></script>
<script src="/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>