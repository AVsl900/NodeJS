<!doctype html>
<html lang="en">
 <head>
   <!-- Required meta tags -->
   <meta charset="utf-8">
   <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
 
   <!-- Bootstrap CSS -->
   <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
   <title>My blog</title>
</head>
<body>

  <style>
    #a1 {
      display: flex;
      justify-content: space-around;
      width: 100%;
    }
  </style>

<div class="container">
    <%- include("partials/navbar.ejs") %>
    <div class="jumbotron">
     
    <form method="post" action="/new_post">
      <% if (typeof currentUser !== "undefined") {%>

  <!-- <div id="a1"> -->
    <div class="form-group">
        <label for="name">Title</label>
        <input type="text" name="title" class="form-control" id="title" placeholder="Тема " required>
    </div>

    <div class="form-group">
      <label for="name">Author</label>
      <input type="text" value = "<%- currentUser.name %>" readonly name="author" class="form-control" id="author" placeholder="Имя">
    </div>
    
    <div class="form-group">
        <label for="message">Body</label>
        <textarea name="body" class="form-control" id="body" rows="10" required></textarea>
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Send</button>
    <% ;} else { %>
      <h2>Sorry. To add new posts, please login.</h2>
      <a href="/login" class="btn btn-primary"  >Login</a>

    <% ;} %>
    </form>
    </div> 
</div>
<!-- JavaScript -->
<script src="/jquery/jquery.min.js"></script>
<script src="/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>